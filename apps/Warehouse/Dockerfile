# Run the container with `docker run -p 3000:3000 -t Warehouse`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system Warehouse && \
          adduser --system -G Warehouse Warehouse

COPY dist/apps/Warehouse Warehouse/
RUN chown -R Warehouse:Warehouse .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix Warehouse --omit=dev -f install

CMD [ "node", "Warehouse" ]
